<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/game_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/game_logo"
        android:layout_marginTop="80dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@drawable/animal1"
        android:layout_toLeftOf="@+id/play_btn"
        android:layout_alignBottom="@id/play_btn"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@drawable/animal1_bw"
       android:layout_toRightOf="@id/play_btn"
        android:layout_alignBottom="@id/play_btn"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@drawable/animal3"
        android:layout_toRightOf="@id/quitbtn"
        android:layout_below="@+id/quitbtn"/>
    <ImageView
        android:id="@+id/img4"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@drawable/animal3_bw"
        android:layout_toLeftOf="@+id/quitbtn"
            android:layout_below="@id/quitbtn"/>
    <ImageButton
        android:id="@+id/play_btn"
        android:layout_width="180dip"
        android:layout_height="120dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/play_button" />

    <Button
        android:id="@+id/quitbtn"
        android:layout_width="170dip"
        android:layout_height="50dip"

        android:layout_below="@+id/play_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:text="Quit"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textColor="@color/ColorRed"
        />



</RelativeLayout>